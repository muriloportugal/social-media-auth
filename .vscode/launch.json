  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve Linux",
      "type": "firefox",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "https://localhost:4200/"
    },
    {
      "name": "ng serve Windows",
      "type": "firefox",
      "firefoxExecutable": "C:\\Program Files\\Firefox Developer Edition\\firefox.exe",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "https://localhost:4200/",
      "timeout": 10,
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "https://localhost:9876/debug.html"
    }
  ]
}
